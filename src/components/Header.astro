<style>

@import url('https://fonts.googleapis.com/css2?family=Playwrite+US+Modern:wght@100..400&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		font-family: 'Roboto Mono';
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		/*align-items: center;*/
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: black;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: blue;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (width < 820px) {
		.social-links, .internal-links {
			display: none;
		}
		button img {
			display: inherit;
	}
	}
	.ico, button > img {
			width: 32px;
			height:32px;
		}
	button img {
		display: none;
	}


</style>
